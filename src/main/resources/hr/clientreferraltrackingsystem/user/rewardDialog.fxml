<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<VBox alignment="CENTER" prefHeight="169.0" prefWidth="307.0" spacing="10" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="hr.clientreferraltrackingsystem.controller.DialogController">
    <Label text="Please enter reward for user:">
      <font>
         <Font name="Segoe UI Bold" size="13.0" />
      </font></Label>
    <TextField fx:id="descriptionField" promptText="Description">
      <VBox.margin>
         <Insets left="20.0" right="20.0" />
      </VBox.margin></TextField>
    <TextField fx:id="valueField" promptText="Value in $">
      <VBox.margin>
         <Insets left="20.0" right="20.0" />
      </VBox.margin></TextField>
    <HBox spacing="10">
        <Button onAction="#onSave" text="Save">
         <HBox.margin>
            <Insets left="20.0" />
         </HBox.margin></Button>
        <Button onAction="#onCancel" text="Cancel">
         <HBox.margin>
            <Insets />
         </HBox.margin></Button>
    </HBox>
</VBox>
